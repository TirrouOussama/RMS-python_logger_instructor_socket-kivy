<liscencescreen>	
	Label:
		text: 'LISCENCE'
		size: root.width*0.4, root.height*0.2
		pos: root.width*0.3, root.height*0.8
		bold: True
	Label: 
		text: "Room service guest app was developped by SARL and is under the following bands:"
		pos: root.width*0.2, root.height*0.75
		size: root.width*0.6, root.height*0.2
		font_size: 12

	ScrollView:

		pos: root.width*0.2, root.height*0.2
		size: root.width*0.6, root.height*0.6


		Label:
			id: liscence
			font_size: 10
			size_hint_x: 1.0
			size_hint_y: None
			text_size:self.width,None
			height: self.texture_size[1]

	Button:
		text: "Agreed"
		font_size: 12
		pos: root.width*0.6, root.height*0.1
		size: root.width*0.1, root.height*0.05
		on_press: root.Agreedliscence()

	Button: 
		text: "Decline"
		font_size: 12
		pos: root.width*0.4, root.height*0.1
		size: root.width*0.1, root.height*0.05
		on_press: root.Declineliscence()


<loginscreen>
	Label:
		text: "Login with your card to continue" 
		pos: root.width*0.2, root.height*0.85
		size: root.width*0.6, root.height*0.2
		font_size: 16
		bold: True
		italic: True



	Button:
		text: "Log In"
		disabled: True if root.nfc == '' else False
		font_size: 14
		pos: root.width*0.3, root.height*0.6
		size: root.width*0.4, root.height*0.05
		on_press: root.login()

	Label:
		text: "Scan nfc card with your smart device :"
		font_size: 14
		pos: root.width*0.3, root.height*0.5
		size: root.width*0.3, root.height*0.05
		font_size: 12
		italic: True

	Label:
		id: nfc
		font_size: 14
		pos: root.width*0.45, root.height*0.5
		size: root.width*0.4, root.height*0.05
		font_size: 12
		italic: True

	Label:
		text: "only autorized guests with Nfc card authentification are allowed to continue" 
		pos: root.width*0.1, root.height*0.1
		size: root.width*0.4, root.height*0.01
		font_size: 12
		italic: True


<mainscreen>


	Label:
		id: time
		pos: root.width*0.1, root.height*0.85
		size: root.width*0.2, root.height*0.2
		font_size: 16
		bold: True
		italic: True

	Button: 
		text:" Log Out"
		pos: root.width*0.8, root.height*0.925
		size: root.width*0.1, root.height*0.04
		font_size: 12
		bold: True
		italic: True
		on_press:root.logout()

	Button:
		on_press: root.firstlamponoff()
		pos: root.width*0.1, root.height*0.7
		size: root.width*0.12, root.height*0.05

		Image:
			source: root.firstsource
			center_x: self.parent.center_x
			center_y: self.parent.center_y
	Label: 
		text: root.firstlamp_msg
		pos: root.width*0.2, root.height*0.7
		size: root.width*0.2, root.height*0.05
		italic: True
		font_size: 12

	Button:
		on_press: root.secondlamponoff()
		pos: root.width*0.1, root.height*0.6
		size: root.width*0.12, root.height*0.05

		Image:
			source: root.secondsource
			center_x: self.parent.center_x
			center_y: self.parent.center_y
	Label: 
		text: root.secondlamp_msg
		pos: root.width*0.2, root.height*0.6
		size: root.width*0.2, root.height*0.05
		italic: True
		font_size: 12


